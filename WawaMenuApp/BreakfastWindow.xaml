<Window x:Name="breakfastWindow" x:Class="WawaMenuApp.BreakfastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WawaMenuApp"
        mc:Ignorable="d"
        Title="BreakfastWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,373,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="2"/>
        <TextBlock Margin="15,10,4.6,0" TextWrapping="Wrap" Text="Welcome to Wawa" VerticalAlignment="Top" Height="31" Width="774" FontFamily="Officina Sans" FontSize="22" Foreground="Red" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Button Margin="47,52,500.6,208" Click="Button_Click" Background="#FF73411C">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/burrito.png" Height="120" Width="215" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Breakfast Sandwiches"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="298,89,272.6,147" Click="Button_Click" Background="#FF73411C">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/oatmeal.png" Height="125" Width="216" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Oatmeal"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="47,217,500.6,52" Click="Button_Click" Background="#FF73411C">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/fruit.jpg" Height="102" Width="216" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Fruit Bowl"/></TextBlock>
            </StackPanel>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="326" Margin="587,47,0,0" VerticalAlignment="Top" Width="197">
            <ListBoxItem Content="Ham Sandwich...$5.00" FontSize="18"/>
            <ListBoxItem Content="Fruit Bowl...$3.00" FontSize="18"/>
            <ListBoxItem Content="Total: $8.00" FontSize="18"/>
        </ListBox>
        <Button x:Name="backButton" HorizontalAlignment="Left" Margin="402,296,0,0" VerticalAlignment="Top" Width="180" Height="47" FontFamily="Segoe UI Black" FontSize="20" Background="#FFD93030" Click="BackButton_Click">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="BACK"/></TextBlock>
            </StackPanel>
        </Button>
        <Image HorizontalAlignment="Left" Height="47" Margin="302,296,0,0" VerticalAlignment="Top" Width="100" Stretch="Fill" Source="images/back.png"/>
    </Grid>
</Window>
