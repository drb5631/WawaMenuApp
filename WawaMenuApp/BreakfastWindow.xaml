<Window x:Name="breakfastWindow" x:Class="WawaMenuApp.BreakfastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WawaMenuApp"
        mc:Ignorable="d"
        Title="BreakfastWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="114.4"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="630*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,258.6,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="3"/>
        <TextBlock Margin="15,10,4.6,0" TextWrapping="Wrap" Text="Welcome to Wawa" VerticalAlignment="Top" Height="31" Width="774" FontFamily="Officina Sans" FontSize="22" Foreground="Red" FontWeight="Bold" Grid.ColumnSpan="3"/>
        <Button x:Name="sandwichesClick" Margin="26,52,500.6,208" Click="SandwichesClick_Click" Background="#FF73411C" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Column="1">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/burrito.png" Height="94" Width="183" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Breakfast Sandwiches"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="158,52,246,208" Click="Button_Click" Background="#FF73411C" Grid.Column="2" Grid.RowSpan="2">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/oatmeal.png" Height="112" Width="186" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Oatmeal"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="26,102.6,500.6,52" Click="Button_Click" Background="#FF73411C" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/fruit.jpg" Height="92" Width="195" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA" Height="25"><Run Text="Fruit Bowl"/></TextBlock>
            </StackPanel>
        </Button>
        <ListBox x:Name="orderBox" HorizontalAlignment="Left" Height="326" Margin="424.8,47,0,0" VerticalAlignment="Top" Width="197" Grid.Column="2" Grid.RowSpan="2">
            <ListBoxItem Content="Ham Sandwich...$5.00" FontSize="18"/>
            <ListBoxItem Content="Fruit Bowl...$3.00" FontSize="18"/>
            <ListBoxItem Content="Total: $8.00" FontSize="18"/>
        </ListBox>
        <Button x:Name="backButton" HorizontalAlignment="Left" Margin="505,182,0,0" VerticalAlignment="Top" Width="114" Height="28" FontFamily="Segoe UI Black" FontSize="20" Background="#FFD93030" Click="BackButton_Click" Grid.Column="2" Grid.Row="1">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="BACK"/></TextBlock>
            </StackPanel>
        </Button>
        <Image HorizontalAlignment="Left" Height="28" Margin="425,182,0,0" VerticalAlignment="Top" Width="80" Stretch="Fill" Source="images/back.png" Grid.Column="2" Grid.Row="1"/>
        <Button x:Name="sandwichesClick_Copy" Margin="158,105,246,52" Click="SandwichesClick_Click" Background="#FF73411C" Grid.Column="2" Grid.Row="1">
            <StackPanel>
                <Image Source="images/bowl.png" Height="91" Width="186" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold" Foreground="#FFFAFAFA"><Run Text="Breakfast Bowl"/></TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="clearOrderBtn" HorizontalAlignment="Left" Margin="461,215,0,0" VerticalAlignment="Top" Width="114" Height="28" FontFamily="Segoe UI Black" FontSize="20" Background="#FFD93030" Click="ClearOrderBtn_Click" Grid.Column="2" Grid.Row="1">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold" Foreground="#FFFAFAFA" Width="107"><Run Text="Clear Order"/></TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
