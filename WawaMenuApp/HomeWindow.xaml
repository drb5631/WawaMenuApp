<Window x:Name="mainWindow" x:Class="WawaMenuApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Home Screen" Height="450" Width="800" ResizeMode="NoResize">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="148*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,373,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFE7D6BA" HorizontalAlignment="Left" Height="47" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="2"/>
        <TextBlock Margin="15,10,4.6,0" TextWrapping="Wrap" Text="Welcome to Wawa" VerticalAlignment="Top" Height="31" Width="774" FontFamily="Officina Sans" FontSize="2" Foreground="Red" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Button x:Name="btnBreakfast" Margin="48,52,221.54,218" Background="#FF73411C" Click="BtnBreakfast_Click">
            <StackPanel>
                <Image x:Name="homeBreakfast" Source="/WawaMenuApp;component/images/breakfast.png" Height="88" Width="215" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS"><Run Text="Breakfast"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="301,53,264.6,217" Click="Button_Click" Grid.ColumnSpan="2">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/lunchdinner.png" Height="96" Width="215" />
                <TextBlock HorizontalAlignment="Center" FontFamily="Comic Sans MS"><Run Text="Lunch/Dinner"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="165,215,104.6,55" Click="BeverageButton">
            <StackPanel>
                <Image Source="/WawaMenuApp;component/images/beverages.png" Height="107" Width="215" />
                <TextBlock HorizontalAlignment="Center"><Run Text="Beverages" FontFamily="Comic Sans MS"/></TextBlock>
            </StackPanel>
        </Button>
        <ListBox HorizontalAlignment="Left" Height="315" Margin="73.46,52,0,0" VerticalAlignment="Top" Width="197" Grid.Column="1">
            <ListBoxItem Content="Ham Sandwich...$5.00" FontSize="18"/>
            <ListBoxItem Content="Fruit Bowl...$3.00" FontSize="18"/>
            <ListBoxItem Content="Total: $8.00" FontSize="18"/>
        </ListBox>


    </Grid>


    <Window.Resources>
        <Style TargetType="{x:Type Button}">

            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="20" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="4" Background="#FF73411C">
                            <Grid>
                                <ContentPresenter x:Name="MyContentPresenter"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>



</Window>
    
    
